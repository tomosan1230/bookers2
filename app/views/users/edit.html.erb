<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local: true do |user| %>
      <div class="form-group">
        <label for="user_name">Name</label>
        <%= user.text_field :name, class:"form-control name" %>
      </div>
      <div class="form-group">
        <label for="user_image">Image</label>
        <%= user.file_field :profile_image, class: "form-control-file user_image", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= user.text_field :introduction, class:"form-control introduction" %>
      </div>
      <div class="form-group">
        <%= user.submit "Update User", class:"btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>