<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-block', method: :get do %>
        <i class="fas fa-user-cog", aria-hidden="true"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>

      <% if @user.errors.any? %>
      <%= @user.errors.count %>errors prohibited this book from being saved:
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <%= form_with model: @book do |f| %>

      <div class="form-group">
        <div class="field_with_errors">
          <label for="book_title">Title</label>
        </div>
        <div class="field_with_errors">
          <%= f.text_field :title, class: 'form-control book_title' %>
        </div>
      </div>

      <div class="form-group">
        <div class="field_with_errors">
          <label for="book_title">Opinion</label>
        </div>
        <div class="field_with_errors">
          <%= f.text_area :body, class: 'form-control book_body' %>
      </div>
      </div>

      <div class="form-group">
        <%= f.submit  'Create Book', class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>

    <!--右側-->
    <div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(80,80) %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>

        </table>
      </div>
    </div>


  </div>
</div>